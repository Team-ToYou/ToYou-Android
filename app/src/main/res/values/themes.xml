<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToYou" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/login_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NoDimBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@style/NoDimBottomSheetStyle</item>
    </style>

    <style name="NoDimBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MypageDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/dialog_background_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

