<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.toyou.toyouandroid.presentation.fragment.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_create_fragment"
            app:destination="@id/create_fragment"
            app:popUpTo="@id/navigation_home"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_social"
        android:name="com.toyou.toyouandroid.ui.social.SocialFragment"
        android:label="fragment_social"
        tools:layout="@layout/fragment_social" >
        <action
            android:id="@+id/action_navigation_social_to_questionTypeFragment"
            app:destination="@id/questionTypeFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.toyou.toyouandroid.presentation.fragment.calendar.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navigation_mypage"
        android:name="com.toyou.toyouandroid.presentation.fragment.mypage.MypageFragment"
        android:label="fragment_mypage"
        tools:layout="@layout/fragment_mypage" />
    <fragment
        android:id="@+id/create_fragment"
        android:name="com.toyou.toyouandroid.presentation.fragment.home.CreateFragment"
        android:label="CreateFragment"
        tools:layout="@layout/fragment_create">
        <action
            android:id="@+id/action_create_fragment_to_previewFragment"
            app:destination="@id/previewFragment" />
    </fragment>
    <fragment
        android:id="@+id/previewFragment"
        android:name="com.toyou.toyouandroid.ui.home.PreviewFragment"
        android:label="PreviewFragment"
        tools:layout="@layout/fragment_preview"/>
    <fragment
        android:id="@+id/questionTypeFragment"
        android:name="com.toyou.toyouandroid.ui.social.QuestionTypeFragment"
        android:label="QuestionTypeFragment"
        tools:layout="@layout/fragment_question_type">
        <action
            android:id="@+id/action_questionTypeFragment_to_questionContentFragment"
            app:destination="@id/questionContentFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionContentFragment"
        android:name="com.toyou.toyouandroid.ui.social.QuestionContentFragment"
        android:label="QuestionContentFragment"
        tools:layout="@layout/fragment_question_content">
        <action
            android:id="@+id/action_questionContentFragment_to_sendFragment"
            app:destination="@id/sendFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendFragment"
        android:name="com.toyou.toyouandroid.ui.social.SendFragment"
        android:label="SendFragment"
        tools:layout="@layout/fragment_send">
        <action
            android:id="@+id/action_sendFragment_to_sendFinalFragment"
            app:destination="@id/sendFinalFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendFinalFragment"
        android:name="com.toyou.toyouandroid.ui.social.SendFinalFragment"
        android:label="SendFinalFragment"
        tools:layout="@layout/fragment_send_final"/>


</navigation>