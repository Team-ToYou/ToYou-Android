<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <TextView
        android:id="@+id/tutorial_step_5_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/sc_r15"
        android:gravity="center"
        android:text="@string/tutorial_step_5_title"
        android:textColor="@color/black"
        android:layout_marginTop="111dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tutorial_step_5_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_step_5"
        android:layout_marginTop="33dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_step_5_title" />

    <TextView
        android:id="@+id/tutorial_complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/sc_r20"
        android:text="@string/tutorial_complete"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_step_5_device" />

</androidx.constraintlayout.widget.ConstraintLayout>