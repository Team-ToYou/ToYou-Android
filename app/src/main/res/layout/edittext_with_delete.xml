<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.toyou.toyouandroid.presentation.viewmodel.SocialViewModel" />
    </data>

<LinearLayout
    android:id="@+id/optionsContainer"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@drawable/search_container"
    android:layout_marginTop="20dp">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="0dp"
        style="@style/sc_r10"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:maxLength="20"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/limit_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{String.format("(%d/50)", viewModel.getOptionLength(viewModel.optionIndex))}'
        style="@style/sc_l8"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/delete_btn"
        android:contentDescription="Delete option" />

</LinearLayout>
</layout>