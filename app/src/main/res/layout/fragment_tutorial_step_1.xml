<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_title_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <TextView
        android:id="@+id/tutorial_step_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/sc_r15"
        android:gravity="center"
        android:text="@string/tutorial_step_1_title"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_title_h" />

    <TextView
        android:id="@+id/tutorial_step_1_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/sc_l12"
        android:gravity="center"
        android:text="@string/tutorial_step_1_subtitle"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_step_1_title" />

    <ImageView
        android:id="@+id/tutorial_step_1_device"
        android:layout_width="330dp"
        android:layout_height="730dp"
        android:src="@drawable/tutorial_step_1_3x"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tutorial_step_1_subtitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_step_1_point"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/tutorial_step_1_device"
        app:layout_constraintEnd_toEndOf="@+id/tutorial_step_1_device"
        app:layout_constraintTop_toTopOf="@+id/tutorial_step_1_device" />

</androidx.constraintlayout.widget.ConstraintLayout>