<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textMessage"
        style="@style/sc_l12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="요즘 어떻게 지내?"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/button"/>

    <TextView
        android:id="@+id/choose_option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="옵션 예시"
        android:background="@drawable/answer_box"
        android:paddingVertical="5dp"
        android:paddingHorizontal="7dp"
        android:layout_marginTop="6dp"
        style="@style/sc_l10"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMessage"/>

    <TextView
        android:id="@+id/choose_option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="옵션 예시"
        android:background="@drawable/answer_box"
        android:paddingVertical="5dp"
        android:paddingHorizontal="7dp"
        android:layout_marginTop="6dp"
        style="@style/sc_l10"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_option1"/>

    <TextView
        android:id="@+id/fromWho_tv"
        style="@style/sc_l12"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        app:layout_constraintEnd_toEndOf="@id/choose_option2"
        app:layout_constraintTop_toBottomOf="@+id/choose_option2" />

</androidx.constraintlayout.widget.ConstraintLayout>