<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/create_clicked_btn"
        app:layout_constraintBottom_toBottomOf="@+id/textMessage"
        app:layout_constraintTop_toTopOf="@+id/textMessage" />

    <TextView
        android:id="@+id/textMessage"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="요즘 어떻게 지내?"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <TextView
        android:id="@+id/fromWho_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <EditText
        android:id="@+id/memo_et"
        android:layout_width="320dp"
        android:layout_height="120dp"
        style="@style/sc_l10"
        android:hint="답변을 입력해주세요."
        android:visibility="gone"
        android:background="@drawable/card_edit_border"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:maxLength="200"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/memo2_et"
        android:layout_width="320dp"
        android:layout_height="35dp"
        style="@style/sc_l10"
        android:hint="답변을 입력해주세요."
        android:background="@drawable/card_edit_border"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:maxLength="50"/>

    <LinearLayout
        android:id="@+id/choose_three_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:text="1"
            style="@style/sc_l10"
            android:id="@+id/choose_three_first_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_three_second_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_three_third_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_two_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="1"
            style="@style/sc_l10"
            android:id="@+id/choose_two_first_tv"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:textColor="@color/type_text_selector"
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_two_second_tv"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_five_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:text="1"
            android:textColor="@color/type_text_selector"
            style="@style/sc_l10"
            android:id="@+id/choose_five_first_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:textColor="@color/type_text_selector"
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_five_second_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_five_third_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_five_forth_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_five_fifth_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_forth_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="1"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_first_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:textColor="@color/type_text_selector"
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_second_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_third_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_forth_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>




    <TextView
        android:id="@+id/limit_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/200"
        style="@style/sc_l8"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/memo_et"
        app:layout_constraintEnd_toEndOf="@+id/memo_et"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fromWhoEt_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/memo_et"
        app:layout_constraintTop_toBottomOf="@+id/memo_et" />

    <TextView
        android:id="@+id/fromWhoTwo_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/choose_two_linear"
        app:layout_constraintTop_toBottomOf="@+id/choose_two_linear" />

    <TextView
        android:id="@+id/fromWhoThree_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/choose_three_linear"
        app:layout_constraintTop_toBottomOf="@+id/choose_three_linear" />

    <TextView
        android:id="@+id/fromWhoFour_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/choose_forth_linear"
        app:layout_constraintTop_toBottomOf="@+id/choose_forth_linear" />

    <TextView
        android:id="@+id/fromWhoFive_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/choose_five_linear"
        app:layout_constraintTop_toBottomOf="@+id/choose_five_linear" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>