<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/create_clicked_btn"
        app:layout_constraintBottom_toBottomOf="@+id/textMessage"
        app:layout_constraintTop_toTopOf="@+id/textMessage" />

    <TextView
        android:id="@+id/textMessage"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="요즘 어떻게 지내?"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <TextView
        android:id="@+id/fromWho_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <EditText
        android:id="@+id/memo_et"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@drawable/card_edit_border"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/textMessage" />

    <TextView
        android:id="@+id/fromWhoEt_tv"
        style="@style/sc_l10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From."
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/memo_et"
        app:layout_constraintTop_toBottomOf="@+id/memo_et" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>