<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요즘 어떻게 지내?"
        style="@style/gangwon16"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/answer_container"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/answer_box"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그냥 저냥.. 일하고 사랑하고 짜증도 내고.."
            style="@style/gangwon16"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_three_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:text="1"
            style="@style/sc_l10"
            android:id="@+id/choose_three_first_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_three_second_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_three_third_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_two_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="1"
            style="@style/sc_l10"
            android:id="@+id/choose_two_first_tv"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:textColor="@color/type_text_selector"
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_two_second_tv"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_five_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:text="1"
            android:textColor="@color/type_text_selector"
            style="@style/sc_l10"
            android:id="@+id/choose_five_first_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:textColor="@color/type_text_selector"
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_five_second_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_five_third_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_five_forth_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_five_fifth_tv"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_forth_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="1"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_first_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"/>


        <TextView
            android:textColor="@color/type_text_selector"
            android:text="2"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_second_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_third_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="@color/type_text_selector"
            android:text="3"
            style="@style/sc_l10"
            android:id="@+id/choose_forth_forth_tv"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:background="@drawable/search_container"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>